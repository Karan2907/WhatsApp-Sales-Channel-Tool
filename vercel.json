{
  "version": 2,
  "rewrites": [
    {
      "source": "/webhook/booking-started",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/booking-abandoned",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/reservation-confirmed",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/guest-checked-in",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/health",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/settings",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/api/settings",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/api/regenerate-verify-token",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/meta",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/twilio",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/webhook/gupshup",
      "destination": "/webhooks/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; media-src 'self'; object-src 'none'"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}